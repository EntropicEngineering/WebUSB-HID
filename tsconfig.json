    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "./dist/",
    "strictNullChecks": true,
    "target": "es2016",
    "sourceMap": true
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ]
}